{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<main class="site-main">
	<div class="inner">

		<div class="site-content fadeInDown delay_075s">
			{{!-- Everything inside the #post tags pulls data from the page --}}
			{{#post}}
			<article class="{{post_class}}">
				<header class="entry-header">
					<div class="entry-header-wrap">
						{{#if feature_image}}
						<div class="post-thumbnail"><img srcset="{{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s"}} 480w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 900w, {{img_url feature_image size="xl"}} 1800w" sizes="(max-width: 930px) calc(100vw - 30px), (max-width: 1230px) calc(75vw - 22px), 900px" src="{{img_url feature_image size="l"}}" alt="{{title}}" /></div>
						{{/if}}
						<h1 class="entry-title">{{title}}</h1>
					</div>
				</header><!-- .entry-header -->
				<div class="entry-content">
					{{content}}
				</div><!-- .entry-content -->
				{{#if tags}}
				<footer class="entry-footer">
					<div class="tag-links">{{t "Tags:"}} {{tags separator=""}}</div>
				</footer><!-- .entry-footer -->
				{{/if}}
			</article><!-- .post -->
			{{/post}}
		</div><!-- .site-content -->

		{{!-- The tag below includes the theme sidebar - partials/sidebar.hbs --}}
		{{> sidebar}}

	</div><!-- .inner -->
</main><!-- .site-main -->
