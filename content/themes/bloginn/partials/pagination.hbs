<nav class="pagination">
	{{#if prev}}
	<a class="newer-posts square fill-horizontal" href="{{page_url prev}}"><span class="icon-chevron-left" aria-hidden="true"></span><span class="screen-reader-text">{{t "Newer Posts"}}</span></a>
	{{/if}}
	<span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
	{{#if next}}
	<a class="older-posts square fill-horizontal" href="{{page_url next}}"><span class="screen-reader-text">{{t "Older Posts"}}</span><span class="icon-chevron-right" aria-hidden="true"></span></a>
	{{/if}}
</nav>
